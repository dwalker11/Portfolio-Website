---
import { storyblokEditable } from "@storyblok/astro";
import { Picture } from "astro:assets";
import { Icon } from "astro-icon/components";
import heroImage from "../assets/hero.png";
import Link from "../components/UI/Link.astro";

const { blok } = Astro.props;

const position = blok.position.length
  ? `a ${blok.position}`
  : "building the next chapter in my career";
---

<main
  {...storyblokEditable(blok)}
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      {blok.heading}
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      {blok.subheading}. I'm currently {position}.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <!-- <Link class="flex gap-1 items-center justify-center" href="/contact">
        <Icon class="text-white w-5 h-5" name="bxs:envelope" />
        Contact me
      </Link> -->
    </div>
  </div>
</main>
