---
import { Icon } from "astro-icon";
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/UI/Link.astro";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Hello there, I'm Devon Walker
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      As a software developer, I specialize in bringing ideas<wbr /> to life on the web.
      I'm actively pursuing the <span class="underline underline-offset-4 decoration-dotted">next chapter in my career</span>
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <!-- <Link
        class="flex gap-1 items-center justify-center"
        href="/contact">
        <Icon class="text-white w-5 h-5" name="bx:bxl-github" />
         Contact me
      </Link> -->
      <Link
        size="lg"
        style="outline"
        class="flex gap-1 items-center justify-center"
        href="https://storage.googleapis.com/dw-resume/resume.pdf"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxs-cloud-download" />
         Download Resume
      </Link>
    </div>
  </div>
</main>
